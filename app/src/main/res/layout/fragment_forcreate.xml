<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgforjoin"
    android:orientation="vertical"
    tools:context=".student.fragmentForcreate">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cgprofpic"
        android:layout_width="70dp"

        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/grp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/fragusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deven Doyle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Your username and profile image will\n  be visible to everyone in the group"
            android:textColor="#C4B5B5"
            android:textSize="16sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/grpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#E1C7C7"
            android:gravity="center_horizontal"
            android:hint="Group Name"
            android:inputType="textShortMessage"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            app:hintTextColor="@color/black" />


        <Button
            android:id="@+id/creategrupbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button"
            android:padding="10dp"
            android:text="Create Group"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>